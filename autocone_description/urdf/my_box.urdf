<robot name="simple_box">
  <link name="my_box">
    <static>false</static>
    <inertial>
        <mass value="0.001"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    <visual>
      <origin xyz="2 0 0"/>
      <geometry>
        <box size="1 1 2" />
      </geometry>
    </visual>
  </link>
  <gazebo reference="my_box">
    <kinect>false</kinect>
    
    <material>Gazebo/Blue</material>
    <gravity>false</gravity>
  </gazebo>
</robot>